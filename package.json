{
  "name": "mern_skeleton",
  "version": "1.0.0",
  "description": "MERN skeleton project with parallel client & server setup",
  "license": "ISC",
  "author": "Samit",
  "type": "module",
  "main": "server/server.js",
  "private": true,
  "workspaces": [
    "client",
    "server"
  ],
  "scripts": {
    "start:server": "nodemon server/server.js",
    "start:client": "npm --prefix client run dev",
    "dev": "npm-run-all --parallel start:server start:client",
    "build:client": "vite build --cwd client",
    "preview:client": "vite preview --cwd client",
    "dev:localserver": "cross-env NODE_ENV=local_dev nodemon server/server.js"
  },
  "dependencies": {
    "@vitejs/plugin-react": "^5.1.0",
    "axios": "^1.13.2",
    "bcrypt": "^6.0.0",
    "body-parser": "^1.20.3",
    "bootstrap": "^5.3.8",
    "compression": "^1.8.1",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv": "^16.4.5",
    "express": "^4.21.1",
    "helmet": "^8.1.0",
    "jsonwebtoken": "^9.0.2",
    "mongoose": "^8.7.0",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-router-dom": "^7.9.5",
    "vite": "^5.4.21"
  },
  "devDependencies": {
    "cross-env": "^10.1.0",
    "nodemon": "^3.1.10",
    "npm-run-all": "^4.1.5",
    "prettier": "^3.6.2"
  }
}
